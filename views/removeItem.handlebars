<div class="container mt-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/api/item/itemList">Items List</a></li>
      <li class="breadcrumb-item active" aria-current="page">Remove</li>
    </ol>
  </nav>
</div>

<section class="container item-detail full-heights">
  <h1 class="display-6 text-center mt-3 fw-bolder">Hapus Barang</h1>
  <p class="lead fw-normal text-center">Hapus barang dari gudang</p>

  <table class="table table-primary">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Nama Barang</th>
        <th scope="col">Pemilik</th>
        <th scope="col">Kategori</th>
        <th scope="col">Kondisi</th>
        <th scope="col">Manufaktur</th>
        <th scope="col">Harga</th>
        <th scope="col">Penggemar</th>
        <th scope="col">Opsi</th>
      </tr>
    </thead>
    <tbody>
      {{#each itemList}}
      <tr>
        <th scope="row">{{itemCount}}</th>
        <td>{{name}}</td>
        <td>Otto</td>
        <td>{{tags}}</td>
        <td>Baik</td>
        <td>{{manufacture}}</td>
        <td>{{price}}</td>
        <td>5</td>
        <td>
          <form action="/api/item/remove/{{_id}}?_method=DELETE" method="POST">
            <button class="btn btn-danger btn-sm">Hapus</button>
          </form>
        </td>
      </tr>
      {{else}}
      <tr>
        <tr><p class="alert alert-warning">Tiada barang berada di gudang</p></tr>          
      </tr>
      {{/each}}
    </tbody>
  </table>
    
</section>
